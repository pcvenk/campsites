<% include ../layouts/header%>

<div class="container">
    <div class="row text-center">
        <h1>Edit Campsite <%= foundCampground.name %></h1>

        <form action="/campsites/:id/update?_method=PUT" method="POST">
            <div class="col col-sm-4 col-sm-offset-4">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" value="<%=
                    foundCampground.name %>"
                           placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" value="<%=
                    foundCampground.image %>"
                           placeholder="Image
                    URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control"
                              placeholder="Description"
                              rows="5"
                              name="description"><%=
                        foundCampground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
                <a href="/campsites">Go Back</a>
            </div>
        </form>
    </div>
</div>

<% include ../layouts/footer%>