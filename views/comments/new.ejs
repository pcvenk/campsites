<% include ../layouts/header%>

<div class="container">
    <div class="row text-center">
        <h1>Add Comment to <%= campground.name %></h1>

        <form action="/campsites/<%= campground._id %>/comments" method="post">
            <div class="col col-sm-4 col-sm-offset-4">
                <div class="form-group">
                    <input class="form-control" type="text" name="text" placeholder="Add in a
                    comment">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <textarea class="form-control"
                              placeholder="Description"
                              rows="5"
                              name="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Add</button>
                </div>
                <a href="/campsites">Go Back</a>
            </div>
        </form>
    </div>
</div>

<% include ../layouts/footer%>